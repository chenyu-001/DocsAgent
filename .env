# DocsAgent 环境变量配置

# -------------------- 数据库配置 --------------------
POSTGRES_DB=docsagent
POSTGRES_USER=docsagent
POSTGRES_PASSWORD=docsagent123
POSTGRES_PORT=5432

# -------------------- Qdrant 向量数据库 --------------------
QDRANT_PORT=6333
QDRANT_COLLECTION=documents

# -------------------- JWT 认证 --------------------
JWT_SECRET_KEY=your-secret-key-change-in-production-123456
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# -------------------- 嵌入模型配置 --------------------
EMBEDDING_MODEL_TYPE=bge
EMBEDDING_MODEL_NAME=BAAI/bge-large-zh-v1.5
EMBEDDING_DIMENSION=1024
EMBEDDING_DEVICE=cpu

# -------------------- LLM 配置 (Qwen) --------------------
LLM_TYPE=qwen
LLM_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_API_KEY=your-qwen-api-key-here
LLM_MODEL_NAME=qwen-plus

# -------------------- 文件存储 --------------------
STORAGE_PATH=./storage
MAX_FILE_SIZE=100

# -------------------- 应用配置 --------------------
BACKEND_PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# -------------------- Reranker --------------------
ENABLE_RERANKER=false

# ============================================
# DocsAgent 环境变量配置
# 复制此文件为 .env 并修改相应值
# ============================================

# -------------------- 数据库配置 --------------------
POSTGRES_DB=docsagent
POSTGRES_USER=docsagent
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_PORT=5432

# -------------------- Qdrant 向量数据库 --------------------
QDRANT_PORT=6333
QDRANT_COLLECTION=documents

# -------------------- JWT 认证 --------------------
# 生成方式: openssl rand -hex 32
JWT_SECRET_KEY=your-secret-key-please-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440  # 24小时

# -------------------- 嵌入模型配置 --------------------
# 模型类型: bge | openai
EMBEDDING_MODEL_TYPE=bge

# BGE 本地模型 (推荐中文场景)
EMBEDDING_MODEL_NAME=BAAI/bge-large-zh-v1.5
EMBEDDING_DIMENSION=1024

# 或使用 OpenAI (需要 API key)
# EMBEDDING_MODEL_TYPE=openai
# EMBEDDING_MODEL_NAME=text-embedding-3-large
# EMBEDDING_DIMENSION=3072
# OPENAI_API_KEY=sk-xxx

# -------------------- LLM 配置 --------------------
# 模型类型: qwen | openai | claude | custom
LLM_TYPE=qwen

# Qwen (通义千问) 配置
LLM_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1
LLM_API_KEY=sk-xxx  # 你的阿里云 API Key
LLM_MODEL_NAME=qwen-plus  # qwen-plus, qwen-turbo, qwen-max

# 或使用 OpenAI
# LLM_TYPE=openai
# LLM_API_BASE=https://api.openai.com/v1
# LLM_API_KEY=sk-xxx
# LLM_MODEL_NAME=gpt-4o-mini

# 或使用 Claude
# LLM_TYPE=claude
# LLM_API_BASE=https://api.anthropic.com
# LLM_API_KEY=sk-ant-xxx
# LLM_MODEL_NAME=claude-3-5-sonnet-20241022

# 或使用自定义 OpenAI 兼容接口
# LLM_TYPE=custom
# LLM_API_BASE=http://your-server:8000/v1
# LLM_API_KEY=xxx
# LLM_MODEL_NAME=your-model-name

# -------------------- 文件存储 --------------------
STORAGE_PATH=./storage
MAX_FILE_SIZE=100  # MB

# -------------------- 应用配置 --------------------
BACKEND_PORT=8000
DEBUG=false
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# -------------------- 可选：Reranker 配置 --------------------
# 是否启用重排序
ENABLE_RERANKER=true
RERANKER_MODEL_NAME=BAAI/bge-reranker-large
